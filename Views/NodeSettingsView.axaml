<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Retromind.ViewModels"
        xmlns:m="clr-namespace:Retromind.Models;assembly=Retromind"
        xmlns:p="clr-namespace:Retromind.Resources"
        x:Class="Retromind.Views.NodeSettingsView"
        x:DataType="vm:NodeSettingsViewModel"
        Title="Einstellungen"
        Width="500" Height="450"
        WindowStartupLocation="CenterOwner">

    <!-- Grid nimmt den gesamten Platz ein -->
    <Grid RowDefinitions="*, Auto" Margin="20">
        
        <!-- Zeile 0: Inhalt mit Scrollbar -->
        <ScrollViewer Grid.Row="0" Padding="0,0,10,0">
                <StackPanel Spacing="20" Margin="0,0,0,40">
                    <!-- Name & Beschreibung -->
                    <StackPanel>
                        <TextBlock Text="{x:Static p:Strings.Common_Name}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Name}" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="{x:Static p:Strings.Common_Description}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Description}" AcceptsReturn="True" Height="80"/>
                    </StackPanel>
                    
                    <!-- Assets (Cover, Wallpaper, Video, Logo) -->
                    <!-- Wir nutzen Expander oder GroupBoxen für Übersichtlichkeit -->
                    <Expander Header="Darstellung &amp; Assets" IsExpanded="True" HorizontalAlignment="Stretch">
                        <StackPanel Spacing="10" Margin="0,10,0,0">
                            <!-- Cover -->
                            <Grid ColumnDefinitions="*, 10, Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{x:Static p:Strings.Button_Cover}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="Nutze den Button zum Importieren..." FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                                <Button Grid.Column="2" Content="..." VerticalAlignment="Bottom" 
                                        ToolTip.Tip="Datei auswählen und importieren"
                                        Command="{Binding ImportAssetCommand}"
                                        CommandParameter="{x:Static m:AssetType.Cover}"/>
                            </Grid>

                            <!-- Wallpaper -->
                            <Grid ColumnDefinitions="*, 10, Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{x:Static p:Strings.Button_Wall}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="..." FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                                <Button Grid.Column="2" Content="..." VerticalAlignment="Bottom"
                                        Command="{Binding ImportAssetCommand}"
                                        CommandParameter="{x:Static m:AssetType.Wallpaper}"/>
                            </Grid>
                            
                             <!-- Logo -->
                            <Grid ColumnDefinitions="*, 10, Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{x:Static p:Strings.Button_Logo}" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="..." FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                                <Button Grid.Column="2" Content="..." VerticalAlignment="Bottom"
                                        Command="{Binding ImportAssetCommand}"
                                        CommandParameter="{x:Static m:AssetType.Logo}"/>
                            </Grid>

                            <!-- Video -->
                            <Grid ColumnDefinitions="*, 10, Auto">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Video" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="..." FontStyle="Italic" Foreground="Gray"/>
                                </StackPanel>
                                <Button Grid.Column="2" Content="..." VerticalAlignment="Bottom"
                                        Command="{Binding ImportAssetCommand}"
                                        CommandParameter="{x:Static m:AssetType.Video}"/>
                            </Grid>
                        </StackPanel>
                    </Expander>

                    <!-- Zufalls-Optionen -->
                    <StackPanel>
                    <TextBlock Text="{x:Static p:Strings.Common_Options}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Spacing="10">
                        <CheckBox IsChecked="{Binding RandomizeCovers}" 
                                  IsThreeState="True" 
                                  Content="{x:Static p:Strings.Media_RandomCover}"
                                  ToolTip.Tip="{x:Static p:Strings.Tip_RandomImage}"/>
                        
                        <CheckBox IsChecked="{Binding RandomizeMusic}" 
                                  IsThreeState="True" 
                                  Content="{x:Static p:Strings.Media_RandomMusic}"
                                  ToolTip.Tip="{x:Static p:Strings.Tip_RandomMusic}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Emulator Auswahl -->
                <StackPanel>
                    <TextBlock Text="{x:Static p:Strings.Media_StandardEmulator}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableEmulators}" 
                              SelectedItem="{Binding SelectedEmulator}"
                              HorizontalAlignment="Stretch">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="{x:Static p:Strings.Media_EmulatorSelection}" 
                               FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Zeile 1: Buttons (Fixiert am Boden) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="{x:Static p:Strings.Button_Cancel}" Command="{Binding CancelCommand}" Width="100" HorizontalContentAlignment="Center"/>
            <Button Content="{x:Static p:Strings.Button_Save}" Command="{Binding SaveCommand}" Classes="accent" Width="100" HorizontalContentAlignment="Center" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>