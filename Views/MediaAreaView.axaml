<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Retromind.Models"
             xmlns:vm="clr-namespace:Retromind.ViewModels"
             xmlns:helpers="clr-namespace:Retromind.Helpers"
             xmlns:p="clr-namespace:Retromind.Resources"
             x:Class="Retromind.Views.MediaAreaView"
             x:DataType="vm:MediaAreaViewModel">

    <Grid RowDefinitions="Auto, *">
        <!-- Header bar -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Margin="10">
                
            <!-- Title -->
            <TextBlock Grid.Column="0" Text="{Binding Node.Name}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

            <!-- Right side: Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                    
                <!-- Random Button -->
                <Button Command="{Binding PlayRandomCommand}" 
                        ToolTip.Tip="{x:Static p:Strings.Tip_RandomGame}"
                        Padding="10,5"
                        IsEnabled="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).IsLaunchIdle}">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="ðŸŽ²"/>
                        <TextBlock Text="{x:Static p:Strings.Button_Random}"/>
                    </StackPanel>
                </Button>

                <!-- Favorites-only toggle -->
                <CheckBox IsChecked="{Binding OnlyFavorites}"
                          VerticalAlignment="Center"
                          ToolTip.Tip="{x:Static p:Strings.Common_FavoritesOnlyHint}">
                    <StackPanel Orientation="Horizontal" Spacing="3">
                        <TextBlock Text="â˜…"/>
                        <TextBlock Text="{x:Static p:Strings.Common_FavoritesOnly}"/>
                    </StackPanel>
                </CheckBox>
                
                <!-- Search -->
                <TextBox Text="{Binding SearchText}" 
                         Watermark="{x:Static p:Strings.Search_Search}" 
                         Width="200"
                         VerticalAlignment="Center"/>

                <!-- Status filter + clear -->
                <StackPanel Orientation="Horizontal"
                            Spacing="4"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0">
                    <ComboBox ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SelectedStatusOption, Mode=TwoWay}"
                              Width="130"
                              Height="28"
                              VerticalAlignment="Center"
                              PlaceholderText="Status">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Label}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Clear status filter -->
                    <Button Width="22"
                            Height="22"
                            Padding="0"
                            Margin="0"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Command="{Binding ResetFiltersCommand}"
                            ToolTip.Tip="Reset all filters">
                        <TextBlock Text="âœ•"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </StackPanel>
                
                <!-- Zoom Slider -->
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Strings.Zoom_Zoom}" VerticalAlignment="Center" />
                    <Slider Value="{Binding ItemWidth}" Minimum="50" Maximum="300" Width="150" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- The Media-List -->
        <!-- IMPORTANT: ItemsSource changed to FilteredItems -->
        <ListBox x:Name="MediaList"
                 Grid.Row="1"
                 ItemsSource="{Binding FilteredItems}"
                 SelectedItem="{Binding SelectedMediaItem}"
                 helpers:ListBoxBehaviors.CenterSelectedItemOnceOnFirstSelection="True"
                 Background="Transparent">

            <!-- Context menu for the EMPTY area -->
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static p:Strings.Ctx_Media_Add}"
                              Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).AddMediaCommand}"
                              CommandParameter="{Binding Node}" />
                    <MenuItem Header="{x:Static p:Strings.Import_Folder}"
                              Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ImportRomsCommand}"
                              CommandParameter="{Binding Node}" />
                </ContextMenu>
            </ListBox.ContextMenu>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!-- Appearance of a single item -->
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:MediaItem">
                    <!-- The width is bound to the slider in the ViewModel -->
                    <Border Width="{Binding $parent[UserControl].((vm:MediaAreaViewModel)DataContext).ItemWidth}"
                            Height="{Binding $parent[UserControl].((vm:MediaAreaViewModel)DataContext).ItemWidth}"
                            Margin="5"
                            CornerRadius="5"
                            ClipToBounds="True"
                            Background="Transparent"
                            DoubleTapped="OnItemDoubleTapped">

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{x:Static p:Strings.Button_Edit}"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EditMediaCommand}"
                                          CommandParameter="{Binding .}" 
                                          FontWeight="Bold"/>
                                <Separator/>
                                <MenuItem Header="{x:Static p:Strings.Dialog_LoadMetadata}"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ScrapeMediaCommand}"
                                          CommandParameter="{Binding .}" />
                                <Separator/>
                                <MenuItem Header="Add manual"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).AddManualToMediaCommand}"
                                          CommandParameter="{Binding .}" />
                                <Separator/>
                                <MenuItem Header="{x:Static p:Strings.Button_Delete}"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteMediaCommand}"
                                          CommandParameter="{Binding .}"
                                          Foreground="Red" />
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <!-- Title: Only visible if there is NO CoverPath -->
                            <TextBlock Text="{Binding Title}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="5"
                                       Foreground="Gold"
                                       IsVisible="{Binding PrimaryCoverPath, Converter={x:Static StringConverters.IsNullOrEmpty}}" />

                            <Image helpers:AsyncImageHelper.Url="{Binding PrimaryCoverPath}"
                                   helpers:AsyncImageHelper.DecodeWidth="300" 
                                   Stretch="Uniform"
                                   IsVisible="{Binding PrimaryCoverPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
