<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Retromind.Models"
             xmlns:vm="clr-namespace:Retromind.ViewModels"
             xmlns:helpers="clr-namespace:Retromind.Helpers"
             xmlns:p="clr-namespace:Retromind.Resources"
             x:Class="Retromind.Views.MediaAreaView"
             x:DataType="vm:MediaAreaViewModel">

    <Grid RowDefinitions="Auto, *">
        <!-- Header Leiste -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Margin="10">
                
            <!-- Titel -->
            <TextBlock Grid.Column="0" Text="{Binding Node.Name}" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

            <!-- Rechte Seite: Controls -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                    
                <!-- Zufall Button -->
                <Button Command="{Binding PlayRandomCommand}" 
                        ToolTip.Tip="{x:Static p:Strings.TipRandomGame}"
                        Padding="10,5">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="ðŸŽ²"/>
                        <TextBlock Text="{x:Static p:Strings.Random}"/>
                    </StackPanel>
                </Button>

                <!-- Suche -->
                <TextBox Text="{Binding SearchText}" 
                         Watermark="{x:Static p:Strings.Search}" 
                         Width="200"
                         VerticalAlignment="Center"/>

                <!-- Zoom Slider -->
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Strings.Zoom}" VerticalAlignment="Center" />
                    <Slider Value="{Binding ItemWidth}" Minimum="50" Maximum="300" Width="150" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Die Medien-Liste -->
        <!-- WICHTIG: ItemsSource geÃ¤ndert auf FilteredItems -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding FilteredItems}"
                 SelectedItem="{Binding SelectedMediaItem}"
                 Background="Transparent">

            <!-- KontextmenÃ¼ fÃ¼r den LEEREN Bereich -->
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static p:Strings.CtxAddMedia}"
                              Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).AddMediaCommand}"
                              CommandParameter="{Binding Node}" />
                    <MenuItem Header="{x:Static p:Strings.ImportFolder}"
                              Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ImportRomsCommand}"
                              CommandParameter="{Binding Node}" />
                </ContextMenu>
            </ListBox.ContextMenu>

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!-- Aussehen eines einzelnen Items -->
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:MediaItem">
                    <!-- Breite wird an den Slider im ViewModel gebunden -->
                    <Border Width="{Binding $parent[UserControl].((vm:MediaAreaViewModel)DataContext).ItemWidth}"
                            Height="{Binding $parent[UserControl].((vm:MediaAreaViewModel)DataContext).ItemWidth}"
                            Margin="5"
                            CornerRadius="5"
                            ClipToBounds="True"
                            Background="Transparent"
                            DoubleTapped="OnItemDoubleTapped">

                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{x:Static p:Strings.Edit}"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EditMediaCommand}"
                                          CommandParameter="{Binding .}" 
                                          FontWeight="Bold"/>
                                <Separator/>
                                <MenuItem Header="{x:Static p:Strings.LoadMetadata}"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ScrapeMediaCommand}"
                                          CommandParameter="{Binding .}" />
                                <Separator/>
                                <!-- HIER WURDE ENTFERNT: Cover Ã¤ndern, Logo Ã¤ndern, Wallpaper Ã¤ndern, Musik Ã¤ndern -->
                                <!-- Die Musik-Verwaltung kÃ¶nntest du analog zu den Bildern in den Edit-Dialog packen oder hier lassen, wenn es selten genutzt wird. Ich habe es hier mal mit entfernt, der Konsistenz halber -->
                                    
                                <MenuItem Header="{x:Static p:Strings.CtxDelete}"
                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).DeleteMediaCommand}"
                                          CommandParameter="{Binding .}"
                                          Foreground="Red" />
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <!-- Titel: Nur sichtbar, wenn KEIN CoverPath da ist -->
                            <TextBlock Text="{Binding Title}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"
                                       Margin="5"
                                       Foreground="Black"
                                       IsVisible="{Binding CoverPath, Converter={x:Static StringConverters.IsNullOrEmpty}}" />

                            <!-- OPTIMIZED IMAGE LOADING -->
                            <!-- 
                                     1. Wir nutzen AsyncImageHelper statt Source direkt.
                                     2. Wir setzen DecodeWidth dynamisch auf die Slider-GrÃ¶ÃŸe + etwas Puffer (z.B. 1.2x fÃ¼r SchÃ¤rfe).
                                     Da Binding Converter fÃ¼r Math hier kompliziert wÃ¤ren, binden wir direkt an ItemWidth (Integer Cast macht Avalonia oft automatisch, 
                                     sonst nimmt AsyncImageHelper int?).
                                     
                                     ACHTUNG: AsyncImageHelper erwartet int? fÃ¼r DecodeWidth. Der Slider liefert double.
                                     Avalonias Binding-System ist oft schlau genug, aber um sicher zu gehen, setzen wir einen fixen Wert 
                                     ODER binden an eine Integer-Property im ViewModel.
                                     
                                     FÃ¼r maximale Performance und Einfachheit nehmen wir hier einfach "300" (das Maximum des Sliders).
                                     Das reicht immer aus und spart trotzdem massiv RAM gegenÃ¼ber 4K Bildern.
                                -->
                            <Image helpers:AsyncImageHelper.Url="{Binding CoverPath}"
                                   helpers:AsyncImageHelper.DecodeWidth="300" 
                                   Stretch="Uniform"
                                   IsVisible="{Binding CoverPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>