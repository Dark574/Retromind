<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Retromind.ViewModels"
        xmlns:p="clr-namespace:Retromind.Resources"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Retromind.Views.NamePromptView"
        x:DataType="vm:NamePromptViewModel"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        CanResize="False">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="{Binding Message}" FontSize="16" />

        <!-- x:Name added so we can find it in the code -->
        <TextBox x:Name="NameBox"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 Width="300" />

        <TextBlock Text="{Binding ValidationMessage}"
                   Foreground="Red"
                   IsVisible="{Binding HasValidationMessage}" />

        <StackPanel Orientation="Horizontal"
                    Spacing="6"
                    IsVisible="{Binding HasSuggestion}">
            <TextBlock Text="{Binding SuggestionText}" VerticalAlignment="Center" />
            <Button Command="{Binding UseSuggestionCommand}"
                    Content="{x:Static p:Strings.Button_TakeOver}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Command="{Binding OkCommand}" 
                    CommandParameter="{Binding $parent[Window]}" 
                    Content="OK"
                    IsDefault="True" />
            <Button Command="{Binding CancelCommand}"
                    CommandParameter="{Binding $parent[Window]}"
                    Content="Cancel"
                    IsCancel="True" />
        </StackPanel>
    </StackPanel>
</Window>
