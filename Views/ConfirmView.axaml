<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="using:System"
        xmlns:p="clr-namespace:Retromind.Resources"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="Retromind.Views.ConfirmView"
        x:DataType="sys:String"
        Title="Bestätigung"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        CanResize="False">

    <StackPanel Margin="20" Spacing="20">
        <!-- Die Nachricht wird per DataContext (String) oder ViewModel übergeben -->
        <TextBlock Text="{Binding}" FontSize="16" TextWrapping="Wrap" MaxWidth="300" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="{x:Static p:Strings.Button_Yes}"
                    Click="OnOkClick"
                    IsDefault="True"
                    Width="80" />

            <Button Content="{x:Static p:Strings.Button_No}"
                    Click="OnCancelClick"
                    IsCancel="True"
                    Width="80" />
        </StackPanel>
    </StackPanel>
</Window>