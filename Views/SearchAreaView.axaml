<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Retromind.ViewModels"
             xmlns:models="clr-namespace:Retromind.Models"
             xmlns:helpers="clr-namespace:Retromind.Helpers"
             xmlns:p="clr-namespace:Retromind.Resources"
             x:Class="Retromind.Views.SearchAreaView"
             x:DataType="vm:SearchAreaViewModel">

    <UserControl.Resources>
        <helpers:BitmapAssetValueConverter x:Key="PathToBitmapConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto, *">
        
        <!-- HEADER: Filter & Controls -->
        <Border Grid.Row="0" Padding="10" Background="#10FFFFFF" Margin="0,0,0,10" CornerRadius="0,0,5,5">
            <StackPanel Spacing="10">
                
                <!-- Zeile 1: Titel & Hauptfilter -->
                <Grid ColumnDefinitions="Auto, 20, Auto, 10, Auto, 10, Auto, *, Auto">
                    <TextBlock Grid.Column="0" Text="{x:Static p:Strings.GlobalSearchShort}" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                    
                    <!-- Text -->
                    <TextBox Grid.Column="2" Text="{Binding SearchText}" Watermark="{x:Static p:Strings.TitleSearch}" Width="200"/>
                    
                    <!-- Jahr -->
                    <TextBox Grid.Column="4" Text="{Binding SearchYear}" Watermark="{x:Static p:Strings.Year}" Width="120"/>
                    
                    <!-- Button -->
                    <Button Grid.Column="6" Command="{Binding SearchCommand}" Classes="accent" Content="ðŸ” Suchen"/>
                    
                    <!-- Zoom (ganz rechts) -->
                    <StackPanel Grid.Column="8" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                         <TextBlock Text="{x:Static p:Strings.Zoom}" VerticalAlignment="Center" FontSize="10"/>
                         <Slider Value="{Binding ItemWidth}" Minimum="50" Maximum="300" Width="100"/>
                    </StackPanel>
                </Grid>

                <!-- Zeile 2: Bereiche (Expander oder einfache Liste horizontal) -->
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <TextBlock Text="{x:Static p:Strings.Area}" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,5,0"/>
                    <ItemsControl ItemsSource="{Binding Scopes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Node.Name}" IsChecked="{Binding IsSelected}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                
                <!-- Zeile 3: Zufall aus Ergebnis -->
                <Button Command="{Binding PlayRandomCommand}" 
                        IsVisible="{Binding SearchResults.Count}"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="ðŸŽ²"/>
                        <TextBlock Text="{x:Static p:Strings.RandomMatch}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- RESULT LIST (Gleiches Template wie MediaAreaView) -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding SearchResults}"
                 SelectedItem="{Binding SelectedMediaItem}"
                 Background="Transparent">
            
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:MediaItem">
                    <Border Width="{Binding $parent[UserControl].((vm:SearchAreaViewModel)DataContext).ItemWidth}"
                            Height="{Binding $parent[UserControl].((vm:SearchAreaViewModel)DataContext).ItemWidth}"
                            Margin="5"
                            CornerRadius="5"
                            ClipToBounds="True"
                            Background="Transparent"
                            DoubleTapped="OnItemDoubleTapped"> <!-- KORRIGIERT: Verweist jetzt auf Code-Behind -->
                        
                        <!-- KontextmenÃ¼ (optional, aber praktisch) -->
                        <Border.ContextMenu>
                            <ContextMenu>
                                <!-- KORRIGIERT: Binding auf PlayCommand statt RequestPlay -->
                                <MenuItem Header="{x:Static p:Strings.Launch}" 
                                          Command="{Binding $parent[UserControl].((vm:SearchAreaViewModel)DataContext).PlayCommand}"
                                          CommandParameter="{Binding .}"/>
                            </ContextMenu>
                        </Border.ContextMenu>

                        <Grid>
                            <TextBlock Text="{Binding Title}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextWrapping="Wrap" TextAlignment="Center" Margin="5" Foreground="Black"
                                       IsVisible="{Binding CoverPath, Converter={x:Static StringConverters.IsNullOrEmpty}}" />

                            <Image Source="{Binding CoverPath, Converter={StaticResource PathToBitmapConverter}}"
                                   Stretch="Uniform"
                                   IsVisible="{Binding CoverPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Info wenn leer -->
        <TextBlock Grid.Row="1" Text="{x:Static p:Strings.NoResult}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   IsVisible="{Binding !SearchResults.Count}"
                   Opacity="0.5" FontSize="16"/>
    </Grid>
</UserControl>
