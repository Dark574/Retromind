<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Retromind.ViewModels"
             xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
             xmlns:converters="clr-namespace:Retromind.Helpers;assembly=Retromind" 
             x:DataType="vm:BigModeViewModel">

    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0, 3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.1"/>
                    <BrushTransition Property="BorderBrush" Duration="0.1"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#CCFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FFD700"/> <!-- Gold Border -->
        </Style>
        <Style Selector="ListBoxItem:selected TextBlock">
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <!-- BACKGROUND -->
        <Image converters:AsyncImageHelper.Url="{Binding SelectedItem.PrimaryWallpaperPath}" 
               Stretch="UniformToFill" IsVisible="{Binding IsGameListActive}"/>
        <Image converters:AsyncImageHelper.Url="{Binding SelectedCategory.PrimaryWallpaperPath}" 
               Stretch="UniformToFill" IsVisible="{Binding IsCategorySelectionActive}"/>
        <Rectangle Fill="Black" Opacity="0.85" />

        <!-- MAIN LAYOUT: 2 columns (left: lists, right: details) -->
        <Grid ColumnDefinitions="450, 30, *" Margin="30">

            <!-- LEFT: HEADER & LISTS -->
            <Grid Grid.Column="0" RowDefinitions="Auto, *">
                
                <!-- Header (title for category view) -->
                <TextBlock Text="{Binding CategoryTitle}" 
                           FontSize="30" FontWeight="Light" Foreground="#88FFFFFF" Margin="0,0,0,20"
                           IsVisible="{Binding IsCategorySelectionActive}"/>
                           
                <!-- Header (category name for game list view) -->
                <TextBlock Text="{Binding SelectedCategory.Name}" 
                           FontSize="30" FontWeight="Light" Foreground="#88FFFFFF" Margin="0,0,0,20"
                           IsVisible="{Binding IsGameListActive}"/>

                <!-- LIST: CATEGORIES -->
                <Border Grid.Row="1" Background="#33000000" CornerRadius="8" Padding="10"
                        IsVisible="{Binding IsCategorySelectionActive}">
                    <ListBox ItemsSource="{Binding CurrentCategories}" 
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             AutoScrollToSelectedItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="60">
                                    <!-- LOGO -->
                                    <Image converters:AsyncImageHelper.Url="{Binding PrimaryLogoPath}"
                                           Stretch="Uniform" HorizontalAlignment="Left"
                                           IsVisible="{Binding PrimaryLogoPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    <!-- TEXT fallback -->
                                    <TextBlock Text="{Binding Name}" FontSize="24" VerticalAlignment="Center" Padding="10,5" Foreground="White"
                                               IsVisible="{Binding PrimaryLogoPath, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- LIST: GAMES -->
                <Border Grid.Row="1" Background="#33000000" CornerRadius="8" Padding="10"
                        IsVisible="{Binding IsGameListActive}">
                    <ListBox ItemsSource="{Binding Items}" 
                             SelectedItem="{Binding SelectedItem}"
                             Background="Transparent"
                             AutoScrollToSelectedItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="90" ColumnDefinitions="Auto, *"> <!-- 2 Spalten: Bild + Text -->
                                        
                                    <!-- COVER / ICON (column 0) -->
                                    <!-- Show cover if available -->
                                    <Image Grid.Column="0" 
                                           converters:AsyncImageHelper.Url="{Binding PrimaryCoverPath}"
                                           Width="70" Margin="0,5,15,5" Stretch="Uniform"
                                           IsVisible="{Binding PrimaryCoverPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                                    <!-- TITLE (column 1) -->
                                    <!-- Always show title as main info in the list -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Title}" 
                                               FontSize="22" 
                                               VerticalAlignment="Center" 
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>

            <!-- RIGHT: DETAILS (shared for both views; also used for video slot) -->
            <Grid Grid.Column="2" RowDefinitions="Auto, Auto, *">
                
                <!-- 1. LOGO AREA -->
                <Panel Grid.Row="0" Height="150" Margin="0,0,0,20">
                    <!-- Logo for category -->
                    <Image converters:AsyncImageHelper.Url="{Binding SelectedCategory.PrimaryLogoPath}"
                           Stretch="Uniform" HorizontalAlignment="Left"
                           IsVisible="{Binding IsCategorySelectionActive}"/>
                           
                    <!-- Logo for game (if present, via MediaItem.PrimaryLogoPath) -->
                    <Image converters:AsyncImageHelper.Url="{Binding SelectedItem.PrimaryLogoPath}"
                           Stretch="Uniform" HorizontalAlignment="Left"
                           IsVisible="{Binding IsGameListActive}"/>
                </Panel>

                <!-- 2. VIDEO SLOT (placeholder only, actual VideoView comes from the host) -->
                <Border x:Name="VideoSlot"
                        Grid.Row="1"
                        CornerRadius="12" ClipToBounds="True"
                        Background="Transparent"
                        Height="350" HorizontalAlignment="Left" Width="622"
                        Margin="0,0,0,20" />

                <!-- 3. DESCRIPTION -->
                <ScrollViewer Grid.Row="2">
                    <StackPanel>
                        <!-- Description for category -->
                        <TextBlock Text="{Binding SelectedCategory.Description}" 
                                   FontSize="16" Foreground="#DDFFFFFF" TextWrapping="Wrap" LineHeight="24"
                                   IsVisible="{Binding IsCategorySelectionActive}"/>
                                   
                            <!-- Details for game -->
                            <StackPanel Spacing="15" IsVisible="{Binding IsGameListActive}">
                                <!-- Description -->
                                <TextBlock Text="{Binding SelectedItem.Description}" 
                                           FontSize="16" Foreground="#DDFFFFFF" TextWrapping="Wrap" LineHeight="24"/>
                                
                                <!-- Metadata section -->
                                <WrapPanel HorizontalAlignment="Left" ItemWidth="200">
                                    <StackPanel Margin="0,0,20,0" IsVisible="{Binding SelectedItem.ReleaseDate, Converter={x:Static ObjectConverters.IsNotNull}}">
                                        <TextBlock Text="Release" Opacity="0.7" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding SelectedItem.ReleaseDate, StringFormat=d}" FontSize="14" Foreground="#CCFFFFFF"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,20,0" IsVisible="{Binding SelectedItem.Developer, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <TextBlock Text="Developer" Opacity="0.7" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding SelectedItem.Developer}" TextTrimming="CharacterEllipsis" FontSize="14" Foreground="#CCFFFFFF"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,20,0" IsVisible="{Binding SelectedItem.Genre, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <TextBlock Text="Genre" Opacity="0.7" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding SelectedItem.Genre}" TextTrimming="CharacterEllipsis" FontSize="14" Foreground="#CCFFFFFF"/>
                                    </StackPanel>
                                </WrapPanel>
                            </StackPanel>
                    </StackPanel>
                </ScrollViewer>

            </Grid>

        </Grid>
        
        <!-- Footer Overlay -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="20" Margin="30" Opacity="0.6">
             <TextBlock Text="[ESC] Back" Foreground="White"/>
             <TextBlock Text="[ENTER] Open" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>