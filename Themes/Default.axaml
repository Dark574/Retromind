<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Retromind.ViewModels"
             xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
             xmlns:converters="clr-namespace:Retromind.Helpers;assembly=Retromind" 
             x:DataType="vm:BigModeViewModel">

    <UserControl.Resources>
        <converters:PathToBitmapConverter x:Key="PathToBitmapConverter"/>
        <!-- Converter für Sichtbarkeit basierend auf String (Logo) -->
        <!-- (Annahme: Du hast diese Converter, sonst nutzen wir Standard Avalonia Converter) -->
    </UserControl.Resources>

    <Grid>
        <!-- HINTERGRUND (Bleibt wie er ist) -->
        <Image Source="{Binding SelectedItem.PrimaryWallpaperPath, Converter={StaticResource PathToBitmapConverter}}" 
               Stretch="UniformToFill" IsVisible="{Binding IsGameListActive}"/>
        <Image Source="{Binding SelectedCategory.PrimaryWallpaperPath, Converter={StaticResource PathToBitmapConverter}}" 
               Stretch="UniformToFill" IsVisible="{Binding !IsGameListActive}"/>
        <Rectangle Fill="Black" Opacity="0.85" />

        <!-- HAUPT LAYOUT: 2 Spalten (Links: Listen, Rechts: Details) -->
        <Grid ColumnDefinitions="450, 30, *" Margin="30">

            <!-- LINKS: HEADER & LISTEN -->
            <Grid Grid.Column="0" RowDefinitions="Auto, *">
                
                <!-- Header (Titel) -->
                <TextBlock Text="{Binding CategoryTitle}" 
                           FontSize="30" FontWeight="Light" Foreground="#88FFFFFF" Margin="0,0,0,20"
                           IsVisible="{Binding !IsGameListActive}"/>
                           
                <!-- Header (Spiel Titel, falls gewünscht, oder leer lassen) -->
                <TextBlock Text="{Binding SelectedCategory.Name}" 
                           FontSize="30" FontWeight="Light" Foreground="#88FFFFFF" Margin="0,0,0,20"
                           IsVisible="{Binding IsGameListActive}"/>

                <!-- LISTE: KATEGORIEN -->
                <Border Grid.Row="1" Background="#33000000" CornerRadius="8" Padding="10"
                        IsVisible="{Binding IsCategorySelectionActive}">
                    <ListBox ItemsSource="{Binding CurrentCategories}" 
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             AutoScrollToSelectedItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="60">
                                    <!-- LOGO -->
                                    <Image Source="{Binding PrimaryLogoPath, Converter={StaticResource PathToBitmapConverter}}"
                                           Stretch="Uniform" HorizontalAlignment="Left"
                                           IsVisible="{Binding PrimaryLogoPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                    <!-- TEXT Fallback -->
                                    <TextBlock Text="{Binding Name}" FontSize="24" VerticalAlignment="Center" Padding="10,5" Foreground="White"
                                               IsVisible="{Binding PrimaryLogoPath, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- LISTE: SPIELE (FIX FÜR PUNKT 2) -->
                <Border Grid.Row="1" Background="#33000000" CornerRadius="8" Padding="10"
                        IsVisible="{Binding IsGameListActive}">
                    <ListBox ItemsSource="{Binding Items}" 
                             SelectedItem="{Binding SelectedItem}"
                             Background="Transparent"
                             AutoScrollToSelectedItem="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="90" ColumnDefinitions="Auto, *"> <!-- 2 Spalten: Bild + Text -->
                                        
                                    <!-- COVER / ICON (Spalte 0) -->
                                    <!-- Zeige Cover wenn vorhanden -->
                                    <Image Grid.Column="0" 
                                           Source="{Binding PrimaryCoverPath, Converter={StaticResource PathToBitmapConverter}}"
                                           Width="70" Margin="0,5,15,5" Stretch="Uniform"
                                           IsVisible="{Binding PrimaryCoverPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                                    <!-- TITEL (Spalte 1) -->
                                    <!-- Zeige Titel immer (als Hauptinfo in der Liste) -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Title}" 
                                               FontSize="22" 
                                               VerticalAlignment="Center" 
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>

            <!-- RECHTS: DETAILS (Geteilt für beide Ansichten -> Löst Video Problem!) -->
            <Grid Grid.Column="2" RowDefinitions="Auto, Auto, *">
                
                <!-- 1. LOGO BEREICH -->
                <Panel Grid.Row="0" Height="150" Margin="0,0,0,20">
                    <!-- Logo für Kategorie -->
                    <Image Source="{Binding SelectedCategory.PrimaryLogoPath, Converter={StaticResource PathToBitmapConverter}}"
                           Stretch="Uniform" HorizontalAlignment="Left"
                           IsVisible="{Binding !IsGameListActive}"/>
                           
                    <!-- Logo für Spiel (Falls vorhanden, MediaItem braucht PrimaryLogoPath Property!) -->
                    <Image Source="{Binding SelectedItem.PrimaryLogoPath, Converter={StaticResource PathToBitmapConverter}}"
                           Stretch="Uniform" HorizontalAlignment="Left"
                           IsVisible="{Binding IsGameListActive}"/>
                </Panel>

                <!-- 2. VIDEO PLAYER (Nur EINMAL definiert -> Stabil!) -->
                <Border Grid.Row="1" 
                        CornerRadius="12" ClipToBounds="True" Background="Black"
                        Height="350" HorizontalAlignment="Left" Width="622"
                        Margin="0,0,0,20"
                        IsVisible="{Binding IsVideoVisible}">
                    <vlc:VideoView MediaPlayer="{Binding MediaPlayer}" Focusable="False" />
                </Border>

                <!-- 3. BESCHREIBUNG -->
                <ScrollViewer Grid.Row="2">
                    <StackPanel>
                        <!-- Beschreibung Kategorie -->
                        <TextBlock Text="{Binding SelectedCategory.Description}" 
                                   FontSize="16" Foreground="#DDFFFFFF" TextWrapping="Wrap" LineHeight="24"
                                   IsVisible="{Binding !IsGameListActive}"/>
                                   
                        <!-- Beschreibung Spiel -->
                        <TextBlock Text="{Binding SelectedItem.Description}" 
                                   FontSize="16" Foreground="#DDFFFFFF" TextWrapping="Wrap" LineHeight="24"
                                   IsVisible="{Binding IsGameListActive}"/>
                    </StackPanel>
                </ScrollViewer>

            </Grid>

        </Grid>
        
        <!-- Footer Overlay -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="20" Margin="30" Opacity="0.6">
             <TextBlock Text="[ESC] Back" Foreground="White"/>
             <TextBlock Text="[ENTER] Open" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>