<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Retromind.ViewModels"
             xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
             x:DataType="vm:BigModeViewModel">
    
    <Grid RowDefinitions="Auto, *, Auto" Background="#1a1a1a">
        
        <!-- Header -->
        <TextBlock Text="{Binding CategoryTitle}" 
                   FontSize="40" FontWeight="Light" Foreground="White" 
                   HorizontalAlignment="Center" Margin="20"/>

        <Grid Grid.Row="1" ColumnDefinitions="400, *">
            
            <!-- List -->
            <ListBox Grid.Column="0" 
                     ItemsSource="{Binding Items}" 
                     SelectedItem="{Binding SelectedItem}"
                     Background="#111" Margin="20">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" FontSize="20" Foreground="White" Padding="10"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Details Area (Right Side) -->
            <Grid Grid.Column="1" RowDefinitions="*, Auto" Margin="20">
                
                <!-- VIDEO PLAYER -->
                <!-- Zeigt Video, wenn MediaPlayer Daten hat -->
                <Border Grid.Row="0" CornerRadius="10" ClipToBounds="True" Background="Black"
                        Focusable="False" IsHitTestVisible="False"> 
                    <vlc:VideoView MediaPlayer="{Binding MediaPlayer}" 
                                   Focusable="False"
                                   IsHitTestVisible="False" />
                </Border>
                
                <!-- Info Text -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10" Margin="0,20,0,0">
                    <TextBlock Text="{Binding SelectedItem.Title}" 
                               FontSize="40" FontWeight="Bold" Foreground="White"
                               TextWrapping="Wrap" TextAlignment="Center"/>
                           
                    <TextBlock Text="{Binding SelectedItem.ReleaseDate, StringFormat='Release: {0:d}'}" 
                               FontSize="18" Foreground="Gray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="30" Spacing="20">
            <Button Content="EXIT" Command="{Binding ExitBigModeCommand}" Padding="20,10" Background="DarkRed" Foreground="White"/>
            <Button Content="PLAY" Command="{Binding PlayCurrentCommand}" Padding="20,10" Background="Green" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
